<div class="page-header">
  <h1>
    Likes
    <a href="/likes/new" class="btn btn-lg btn-success">New Like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Caption</th>
        <th>Photo</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td><%= like.user.username %></td>
        <td><%= like.photo.caption %></td>
        <td>
          <img src = "<%=like.photo.image%>"
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
